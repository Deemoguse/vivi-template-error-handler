{
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"lib": ["ESNext", "DOM"],
		"module": "ES2020",
		"moduleResolution": "Node",
		"strictFunctionTypes": true,
		"target": "ES3",
	},
	"include": ["src"],
	"exclude": ["node_modules", "**/node_modules/*"]
}